{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MainDbConnectionSettings": {
    "MainDataBaseName": "BaseDB",
    "Host": "localhost",
    "Port": 27017,
    "UseTls": false,
    "ServerSelectionTimeoutMinutes": 30,
    "MaxConnectionLifeTimeMinutes": 30,
    "MaxConnectionPoolSize": 500,
    "RetryWrites": true,
    "ReadConcern": 1,
    "WriteConcern": 1,
    "ReadPreference": 1,
    "CustomWriteAcknowledgeCount": 1,
    "RetryReads": true
  },
  "JwtSettings": {
    "Key": "Enter Key",
    "FilePath": "Enter X509Certificate  Path",
    "PEMKey": "Enter Key",
    "ExportKey": "Enter Key",
    "ExpireHourCount": 4,
    "RememberMeDayCount": 7,
    "Audience": "Base",
    "Issuer": "Base",
    "HashAlgorithm": "RS256"
  },
  "UserLoginSettings": {
    "AllowedAccessFailedCount": 5,
    "AccessFailedLockoutMinutes": 5,
    "ManyAccessFailedLockoutMinutes": 60,
    "CodeExpireMinute": 5,
    "CodeDailyRetry": 4,
    "TempCodeDailyRetry": 2,
    "TempCodeExpireMinute": 5,
    "AppDefaultPassword": "123456"
  },
  "DataSeedSettings": {
    "Enabeld": true,
    "DropBeforeInsert" : true
  }


}
